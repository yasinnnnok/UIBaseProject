
@using Entities.Concrete
@using Entities.Dtos
@model (UserDto userDto,List<OperationClaim> operationClaims,List<User> users)


<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />


<div class="row" id="table-head">
    <div class="col-6">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">User Operation Ekleme Sayfası</h4>
            </div>
            <form asp-action="Add" asp-controller="UserOperationClaim" method="post" class="login100-form validate-form">
                <div class="table-responsive">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <td>Kullanıcı Adı</td>
                                <td>
                                    @*<input class="input100" type="text" asp-for="userDto.KullaniciAdi">*@
                                     <select asp-for="userDto.KullaniciAdi" asp-items="@(new SelectList(Model.users,"Name","Name"))">
                                          <option>Bir kullanıcı seçiniz.</option>
                                     </select>
                                    <span asp-validation-for="userDto.KullaniciAdi" class="text-danger"></span>
                                </td>
                                <br />

                            </tr>
                            <tr>
                                <td>Operasyon Adı</td>
                                <td>
                                    @*<input class="input100" type="text" asp-for="userDto.OperasyonAdi"> *@  
                                     <select asp-for="userDto.OperasyonAdi" asp-items="@(new SelectList(Model.operationClaims,"Name","Name"))">
                                          <option>Bir rol seçiniz.</option>
                                     </select>
                                    <span asp-validation-for="userDto.OperasyonAdi" class="text-danger"></span>
                                </td>

                            </tr>
                            <tr>
                               
                            </tr>

                            <tr>
                                <td></td>
                                <td>
                                    <button type="submit" class="btn btn-primary">KAYDET </button>

                                </td>
                                @TempData["Hata"]
                            </tr>

                        </tbody>
                    </table>
                </div>
            </form>
        </div>
    </div>
</div>